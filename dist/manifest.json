{
  "manifest_version": 3,
  "name": "HTOS - Hybrid Thinking Sidecar OS",
  "version": "1.0.0",
  "description": "AI Provider Orchestration Engine - Session-based automation for Claude, ChatGPT, and Gemini",
  "permissions": [
    "alarms",
    "background",
    "browsingData",
    "cookies",
    "declarativeNetRequest",
    "webRequest",
    "notifications",
    "tabs",
    "storage",
    "offscreen",
    "scripting",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "core/sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["*://*/OS/0f.html", "*://*/OS/0h.html"],
      "js": ["content/cs.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
          "session-layer/nj-engine.js",
          "session-layer/nj-engine.css",
          "OS/0h.html",
          "OS/0f.html"
        ],
      "matches": ["*://*/*"]
    }
  ],

  "action": {
    "default_title": "HTOS - AI Orchestration",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}