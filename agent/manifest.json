{
  "manifest_version": 3,
  "name": "HTOS Text-First",
  "description": "Secure text-streaming to LLM providers",
  "version": "1.0.0",
  "background": { "service_worker": "dist/sw.js" },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "cookies",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": []
  },
  "content_scripts": []
}
